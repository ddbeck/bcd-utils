{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "target": "ES2022"
  },
  "include": ["./src/**/*"]
}
